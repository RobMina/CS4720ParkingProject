<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_add_prompt"
        android:id="@+id/set_home_address_button"
        android:layout_gravity="center_horizontal"
        android:onClick="getHomeAddress" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/permit_type_edittext"
        android:layout_gravity="center_horizontal"
        android:inputType="text"
        android:hint="Enter your permit type here." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pick permit expiration date:"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/permit_expiration_datepicker"
        android:layout_gravity="center_horizontal" />
</LinearLayout>